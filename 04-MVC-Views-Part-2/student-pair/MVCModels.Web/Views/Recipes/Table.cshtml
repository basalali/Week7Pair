@model IEnumerable<MVCModels.Web.Models.Recipe>

@{
    ViewData["Title"] = "Table";
}

<h2>All Recipes</h2>


<style>

    .grid-container {
        justify-content: center;
        display: grid;
        grid-template-columns: auto auto auto;
        padding: 10px;
    }

    .grid-item {
        justify-content: center;
        display: grid;
        grid-column-gap: 0px;
        width: 320px;
    }

    #grid-item-styling {
        font-size: 12px;
        min-height: 20px;
        background-image: repeating-linear-gradient(180deg, rgba(134, 215, 118, 0.49),rgba(134, 215, 118, 0.49) 17px, #FFF 17px, #FFF 34px);
    }

    .grid-item img {
        width: 150px;
    }

    #stars-img img {
        width: 33%;
    }
</style>


<div class="grid-container">
    @foreach (Recipe item in Model)
    {
        <div class="grid-item">
            <a asp-action="Detail" asp-route-id="@item.Id"><img src="~/images/@item.ImageName" /></a>
        </div>
    }

    @*<div class="grid-item">
        <div>
            <b>Name</b> <br />
            <b>Type</b> <br />
            <b>Cook Time</b> <br />
            <b>Ingredients</b> <br />
            <b>Rating</b> <br />
        </div>*@

    @foreach (Recipe item in Model)
    {
        <div id="grid-item-styling" class="grid-item">
            <div>
                <a asp-action="Detail" asp-route-id="@item.Id">@item.Name</a> <br />
</div>
            <div>
                @item.RecipeType <br />
            </div>
            <div>
                @item.CookTimeInMinutes <br />
            </div>
            <div>
                @item.Ingredients.Count @Html.DisplayNameFor(model => model.Ingredients) <br />
            </div>
            <div style="position: relative;" id="stars-img">
                @switch (Convert.ToInt32(item.AverageRating))
                {
                    case 1:
                        <img src="~/images/1-star.png" />
                        break;
                    case 2:
                        <img src="~/images/2-star.png" />
                        break;
                    case 3:
                        <img src="~/images/3-star.png" />
                        break;
                    case 4:
                        <img src="~/images/4-star.png" />
                        break;
                    case 5:
                        <img src="~/images/5-star.png" />
                        break;
                    default:
                        break;

                }
            </div>
        </div>
    }
</div>
